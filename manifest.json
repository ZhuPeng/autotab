{
  "manifest_version": 3,
  "name": "Smart Tab Manager",
  "version": "1.1",
  "description": "自动管理浏览器标签页，关闭长时间未使用的标签，节约电脑内存。",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "action"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "persistent": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "icons": {
    "128": "images/icon.png"
  },
  "options_page": "options.html"
} 
